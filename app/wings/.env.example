# Wings 서비스 설정
PORT=8080
NODE_ENV=development

# 내부 서비스 인증 (Panel과 Wings 간 통신)
INTERNAL_API_KEY=your-super-secure-api-key-here-min-32-chars
PANEL_URL=http://localhost:3001

# Docker 설정
DOCKER_IMAGE=itzg/minecraft-server
DOCKER_SOCKET=/var/run/docker.sock

# 마인크래프트 서버 기본 설정
MC_DEFAULT_PORT=25565
MC_DEFAULT_MEMORY=1g
MC_DEFAULT_CPU=1.0
MC_DEFAULT_VERSION=latest
MC_DEFAULT_TYPE=PAPER
MC_RCON_PORT_OFFSET=10
MC_SUPPORTED_TYPES=VANILLA,PAPER,SPIGOT,FORGE,FABRIC,BUKKIT

# WebSocket 설정
WEBSOCKET_PATH=/ws

# 로깅 설정
LOG_LEVEL=info
LOG_DEFAULT_TAIL=100
LOG_DEFAULT_SINCE=300

# 보안 설정
CRYPTO_HASH_BYTES=4
PORT_RANGE_MIN=1
PORT_RANGE_MAX=65535

# 경로 설정
DATA_MOUNT_PATH=/data
SERVER_DATA_BASE_PATH=/home/temmie/minecraft_server
SERVER_DATA_PATH=/home/temmie/minecraft_server

# API 설정
API_BASE_PATH=/api/v1

# Redis 설정 (상태 저장소용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0