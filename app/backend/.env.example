# Backend 환경설정

# 서버 설정
NODE_ENV=development
PORT=3001

# 데이터베이스 설정
DB_TYPE=sqlite
# SQLite용 (개발환경)
DB_DATABASE=dev.sqlite

# Oracle용 (운영환경)
# DB_TYPE=oracle
# DB_TNS_ADMIN=./Wallet_temmieATP
# DB_CONNECT_STRING=temmieATP_high
# DB_USER=your-oracle-username
# DB_PASS=your-oracle-password

# JWT 인증
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=1h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Frontend & CORS
FRONTEND_URL=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Wings API 설정
WINGS_API_URL=http://localhost:8080
INTERNAL_API_KEY=your-super-secure-api-key-here-min-32-chars